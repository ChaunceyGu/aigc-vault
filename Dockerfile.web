# Web 服务 Dockerfile
# 构建阶段
FROM node:18-alpine AS builder

# 构建参数
ARG VERSION=1.0.0
ARG GIT_COMMIT=
ARG GIT_TAG=
ARG BUILD_TIME=

# 设置环境变量（用于 Vite 构建时注入）
ENV VITE_APP_VERSION=${VERSION}
ENV VITE_GIT_COMMIT=${GIT_COMMIT}
ENV VITE_GIT_TAG=${GIT_TAG}
ENV VITE_BUILD_TIME=${BUILD_TIME}

WORKDIR /app

# 复制 package 文件
COPY frontend/package*.json ./

# 安装依赖
RUN npm ci

# 复制源代码
COPY frontend/ ./

# 构建（前端使用相对路径 /api，通过 nginx 代理）
RUN npm run build

# 生产阶段 - 使用 Nginx 服务静态文件
FROM nginx:alpine

# 安装 envsubst（用于替换环境变量）
RUN apk add --no-cache gettext

# 复制构建产物
COPY --from=builder /app/dist /usr/share/nginx/html

# 复制 Nginx 配置模板
COPY nginx.conf.template /etc/nginx/templates/default.conf.template

# 设置环境变量默认值（运行时使用，用于 nginx 配置）
# 这些值可以通过 docker-compose.yml 或 docker run -e 覆盖
ENV BACKEND_HOST=api
ENV BACKEND_PORT=8000

# 暴露端口
EXPOSE 80

# 启动脚本：替换环境变量并启动 nginx
RUN echo '#!/bin/sh' > /docker-entrypoint.sh && \
    echo 'envsubst '"'"'$$BACKEND_HOST $$BACKEND_PORT'"'"' < /etc/nginx/templates/default.conf.template > /etc/nginx/conf.d/default.conf' >> /docker-entrypoint.sh && \
    echo 'exec nginx -g "daemon off;"' >> /docker-entrypoint.sh && \
    chmod +x /docker-entrypoint.sh

CMD ["/docker-entrypoint.sh"]

